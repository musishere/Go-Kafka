# Build stage
FROM golang:1.25-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum* ./
RUN go mod download

# Copy source code
COPY producer/ ./producer/

# Build the producer
RUN CGO_ENABLED=0 GOOS=linux go build -o /app/producer ./producer

# Runtime stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copy the binary from builder
COPY --from=builder /app/producer .

EXPOSE 3000

CMD ["./producer"]

