# Build stage
FROM golang:1.25-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum* ./
RUN go mod download

# Copy source code
COPY consumer/ ./consumer/

# Build the consumer
RUN CGO_ENABLED=0 GOOS=linux go build -o /app/consumer ./consumer

# Runtime stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copy the binary from builder
COPY --from=builder /app/consumer .

CMD ["./consumer"]

